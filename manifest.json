{
 "manifest_version": 2,
 "name": "PocketPlus",
 "version": "1.0.0",
 "description": "Pocket extended :)",
 "short_name": "PocketPlus",
 "permissions": ["*://app.getpocket.com/*", "declarativeContent", "storage", "<all_urls>"],
 "content_scripts": [
   {
     "matches": ["*://app.getpocket.com/*"],
     "js": ["pocketPlus.js"]
   }
 ],
 "browser_action": {
   "default_icon": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  }
 }
}